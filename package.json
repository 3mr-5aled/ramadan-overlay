{
  "name": "ramadan-overlay",
  "version": "0.1.3",
  "description": "Lightweight Ramadan celebration overlay for any website â€” auto-triggered, multi-variant, framework-agnostic.",
  "author": "3mr-5aled",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3mr-5aled/ramadan-overlay.git"
  },
  "keywords": [
    "ramadan",
    "overlay",
    "decoration",
    "islamic",
    "hijri",
    "eid",
    "celebration",
    "animation"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.js",
      "require": "./dist/vue/index.cjs"
    },
    "./angular": {
      "types": "./dist/angular/index.d.ts",
      "import": "./dist/angular/index.js",
      "require": "./dist/angular/index.cjs"
    },
    "./svelte": {
      "types": "./dist/svelte/index.d.ts",
      "import": "./dist/svelte/index.js",
      "require": "./dist/svelte/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx,.svelte",
    "test": "vitest run",
    "test:watch": "vitest",
    "demo": "npx serve demo"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3"
  },
  "peerDependencies": {
    "@angular/common": ">=15.0.0",
    "@angular/core": ">=15.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "svelte": ">=3.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "@angular/core": {
      "optional": true
    },
    "@angular/common": {
      "optional": true
    }
  },
  "devDependencies": {
    "@angular/common": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jsdom": "^28.1.0",
    "react": "^18.0.0",
    "rxjs": "^7.8.2",
    "svelte": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "vue": "^3.0.0"
  }
}
